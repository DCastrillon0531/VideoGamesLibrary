<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#697565"
    tools:context=".NotificationsActivity">

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtNotifications"
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:paddingStart="20dp"
            android:text="Notifications"
            android:textAlignment="center"
            android:textSize="90px"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/iVAccount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="Account"
            app:srcCompat="@drawable/avatar" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="453dp"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6">

        <TextView
            android:id="@+id/txtMessageNotify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You Have no notifications"
            android:textAlignment="center"
            android:textSize="70px"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/btnRefresh"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Refresh"
            android:textSize="60px"
            android:backgroundTint="@android:color/darker_gray"
            android:layout_gravity="center"

            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

        <ImageView
            android:id="@+id/iBNotify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:contentDescription="Notify"
            app:srcCompat="@drawable/notifyicon" />

        <ImageView
            android:id="@+id/iBHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:contentDescription="Home"
            app:srcCompat="@drawable/homeicon" />

        <ImageView
            android:id="@+id/iBMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:contentDescription="Menu"
            app:srcCompat="@drawable/menuicon" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>